<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="@color/grayAccent" />
            <gradient android:angle="-90" android:startColor="@color/grayAccent" android:endColor="@color/grayAccent"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="@color/grayAccent" />
            <solid android:color="@color/grayAccent"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="@color/grayAccent" />
            <gradient android:angle="-90" android:startColor="@color/grayAccent" android:endColor="@color/grayAccent" />
        </shape>
    </item>
</selector>